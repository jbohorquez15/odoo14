<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record model="ir.ui.view" id="biblioteca_ventas_wizard_views_form">
            <field name="name">biblioteca.ventas.wizard.views.form</field>
            <field name="model">biblioteca.wizard</field>
            <field name="arch" type="xml">
                <form string="Crear Facturas por Lecturas">
                    <group>
                        <field name="lectores_facturas_ids"/>
                    </group>
                    <group>
                        <field name="lecturas_id"/>
                        <field name="libros_lecturas_ids" invisible="1"/>    
                        <field name="libros_ids" domain="[('id','in',libros_lecturas_ids)]"/> 
                    </group>
                    <footer>
                        <button name="create_sale_order" type="object" string="Create" class="oe_highlight"/>
                        or 
                        <button special="cancel" string="Cancel"/>
                            
                    </footer>
                </form>
                    
            </field> 
        </record>
        
        <record id="launch_sale_order" model="ir.actions.act_window">
            <field name="name">Crear Facturas</field>
            <field name="res_model">biblioteca.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="model_biblioteca_libros_lecturas"/>
        </record>
        
    </data>
</odoo>