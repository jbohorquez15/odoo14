<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="libros_views_form">
            <field name="name">biblioteca.libros.form</field>
            <field name="model">biblioteca.libros</field>
            <field name="arch" type="xml">
                <form string="Libros Form">
                    <sheet>
                        <h1><field name="name"/></h1>
                        
                        <group>
                            <group>
                                <field name='image' widget="image" class="oe_avatar" />
                            </group>
                            <group>
                                <field name="active"/>
                                <field name="categoria"/>
                            </group>
                            <group>
                                <field name="precio_base"/>
                                <field name="tarifa_adicional"/>
                                <field name="precio_total" force_save="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Descripcion">
                                <field name="descripcion"/>
                            </page>
                             <page string="Lectores">
                                <field name="lectores_ids" nolabel="1" >
                                    <tree string="Lectores">
                                        <field name='name' />
                                        <field name='street' />
                                    </tree>
                                 </field>
                            </page>
                        </notebook>
                    </sheet>
                </form> 
            </field>
        </record>
        <record model="ir.ui.view" id="libros_views_list">
            <field name="name">biblioteca.libros.list</field>
            <field name="model">biblioteca.libros</field>
            <field name="arch" type="xml">
                <tree string="Lista de Libros">
                    <field name="name"/>
                    <field name="descripcion"/>
                    <field name="categoria"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="libros_views_pivot">
            <field name="name">biblioteca.libros.pivot</field>
            <field name="model">biblioteca.libros</field>
            <field name="arch" type="xml">
                <pivot string="Lista de Libros">
                    <field name="categoria" type="row"/>
                    <field name="name" type="row"/>
                    <field name="precio_base" type="measure"/>
                    <field name="tarifa_adicional" type="measure"/>
                    <field name="precio_total" type="measure"/>
                </pivot>
            </field>
        </record>
        
        
        
        
        <record model="ir.ui.view" id="libros_views_search">
            <field name="name">biblioteca.libros.serach</field>
            <field name="model">biblioteca.libros</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="descripcion"/>
                </search>
            </field>
        </record>
        <record model="ir.ui.view" id="libros_view_kanban">
            <field name="name">biblioteca.libros.kanban</field>
            <field name="model">biblioteca.libros</field>
            <field name="type">kanban</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban" sample="1">
                    <!--list of field to be loaded -->
                    <field name="id" />
                    <field name="name" />
                    <templates>
                    <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                                <a type="open">
                                    <img class="oe_kanban_image"
                                        t-att-src="kanban_image('biblioteca.libros', 'image', record.id.value)" />
                                </a>
                                <div class="oe_product_desc">
                                    <h4>
                                        <a type="edit">
                                            <field name="name"></field>
                                        </a>
                                    </h4>
                                    <ul>
                                        <li><field name="descripcion" /> </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>   
  </data>
</odoo>